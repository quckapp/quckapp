{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^test/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/**/*.module.ts",
    "!../src/main.ts",
    "!../src/**/*.dto.ts",
    "!../src/**/*.schema.ts"
  ],
  "coverageDirectory": "../coverage/e2e",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "testTimeout": 60000,
  "maxWorkers": 1,
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true
}
