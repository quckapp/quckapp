# =============================================================================
# QUIKAPP - LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and customize for your local environment:
#   cp .env.example .env
# =============================================================================

# =============================================================================
# GENERAL
# =============================================================================
COMPOSE_PROJECT_NAME=quikapp

# =============================================================================
# POSTGRESQL
# =============================================================================
POSTGRES_USER=quikapp
POSTGRES_PASSWORD=quikapp_secret
POSTGRES_DB=quikapp
POSTGRES_PORT=5432

# =============================================================================
# MONGODB
# =============================================================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin_secret
MONGO_DB=quikapp
MONGO_PORT=27017

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=redis_secret
REDIS_PORT=6379

# =============================================================================
# ELASTICSEARCH
# =============================================================================
ELASTICSEARCH_PORT=9200

# =============================================================================
# CLICKHOUSE
# =============================================================================
CLICKHOUSE_USER=quikapp
CLICKHOUSE_PASSWORD=clickhouse_secret
CLICKHOUSE_DB=quikapp_analytics
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000

# =============================================================================
# KAFKA
# =============================================================================
KAFKA_PORT=29092
KAFKA_UI_PORT=8085

# =============================================================================
# MINIO (S3-Compatible Storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9010
MINIO_CONSOLE_PORT=9011

# =============================================================================
# LOCALSTACK (AWS Services Emulation)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
LOCALSTACK_DEBUG=0

# =============================================================================
# MONITORING - PROMETHEUS
# =============================================================================
PROMETHEUS_PORT=9090

# =============================================================================
# MONITORING - GRAFANA
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3030

# =============================================================================
# MONITORING - JAEGER
# =============================================================================
JAEGER_UI_PORT=16686

# =============================================================================
# APPLICATION - GATEWAY
# =============================================================================
GATEWAY_PORT=3000

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret - CHANGE IN PRODUCTION!
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_chars

# Elixir/Phoenix Secret Key Base - CHANGE IN PRODUCTION!
SECRET_KEY_BASE=dev_secret_key_base_min_64_chars_long_for_phoenix_app_1234567890

# Erlang Cookie for distributed Elixir nodes
ERLANG_COOKIE=quikapp_dev_cookie

# =============================================================================
# OAUTH (Optional - for social login)
# =============================================================================
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# =============================================================================
# PUSH NOTIFICATIONS (Optional)
# =============================================================================
# Firebase Cloud Messaging
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# Apple Push Notification Service
APNS_KEY_ID=
APNS_TEAM_ID=

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=

# SendGrid for emails
SENDGRID_API_KEY=

# Twilio for SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# =============================================================================
# APPLICATION URLS (for services connecting to infrastructure)
# =============================================================================
DATABASE_URL=postgresql://quikapp:quikapp_secret@localhost:5432/quikapp
REDIS_URL=redis://:redis_secret@localhost:6379
AWS_ENDPOINT_URL=http://localhost:4566

# S3 Buckets
S3_MEDIA_BUCKET=quikapp-media-dev
S3_THUMBNAILS_BUCKET=quikapp-thumbnails-dev

# =============================================================================
# ADMIN TOOLS (Optional Profiles)
# =============================================================================
ADMINER_PORT=8081
REDIS_COMMANDER_PORT=8082
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025
