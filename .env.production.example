# QuckApp Production Environment
# IMPORTANT: Never commit actual production values!
# Use secrets management (AWS Secrets Manager, Vault, etc.)

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=production
ENVIRONMENT=production

# ===========================================
# DATABASE - PRODUCTION SERVERS
# ===========================================
# MongoDB Atlas (Production Cluster - Multi-Region)
MONGODB_URI=mongodb+srv://<username>:<password>@prod-cluster.xxxxx.mongodb.net/quckapp?retryWrites=true&w=majority&readPreference=primaryPreferred

# MySQL (Production Aurora)
MYSQL_HOST=quckapp-prod.cluster-xxxxx.us-east-1.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_DATABASE=quckapp
MYSQL_USER=quckapp_prod
MYSQL_PASSWORD=<secure-password-from-secrets-manager>

# PostgreSQL (Production Aurora)
POSTGRES_HOST=quckapp-pg-prod.cluster-xxxxx.us-east-1.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=quckapp
POSTGRES_USER=quckapp_prod
POSTGRES_PASSWORD=<secure-password-from-secrets-manager>

# Redis (Production ElastiCache Cluster)
REDIS_HOST=quckapp-prod.xxxxx.clustercfg.use1.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=<secure-password-from-secrets-manager>
REDIS_TLS_ENABLED=true

# Elasticsearch (Production - Managed)
ELASTICSEARCH_URL=https://quckapp-prod.es.us-east-1.aws.found.io:9243
ELASTICSEARCH_USERNAME=<es-username>
ELASTICSEARCH_PASSWORD=<es-password-from-secrets-manager>

# ===========================================
# MESSAGE BROKERS
# ===========================================
KAFKA_BROKERS=quckapp-prod-kafka-1.xxxxx.amazonaws.com:9092,quckapp-prod-kafka-2.xxxxx.amazonaws.com:9092,quckapp-prod-kafka-3.xxxxx.amazonaws.com:9092
KAFKA_SASL_ENABLED=true
KAFKA_SASL_USERNAME=<kafka-username>
KAFKA_SASL_PASSWORD=<kafka-password-from-secrets-manager>

# ===========================================
# STORAGE - S3 PRODUCTION
# ===========================================
AWS_ACCESS_KEY_ID=<use-iam-role-instead>
AWS_SECRET_ACCESS_KEY=<use-iam-role-instead>
AWS_REGION=us-east-1
S3_BUCKET=quckapp-prod-bucket
STORAGE_MODE=s3

# CloudFront CDN
CDN_URL=https://cdn.quckapp.io
CDN_SIGNING_KEY_ID=<cloudfront-key-id>

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=<production-jwt-secret-from-secrets-manager>
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=<production-refresh-secret-from-secrets-manager>
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=<production-encryption-key-from-secrets-manager>
SECRET_KEY_BASE=<production-secret-key-base-from-secrets-manager>

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://quckapp.io,https://www.quckapp.io,https://app.quckapp.io

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=warn
LOG_PRETTY=false
LOG_FORMAT=json
LOG_REDACT_SENSITIVE=true

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=https://<key>@sentry.io/<project-prod>
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
DATADOG_ENABLED=true
DATADOG_API_KEY=<datadog-api-key-from-secrets-manager>
DATADOG_ENV=production
NEWRELIC_ENABLED=true
NEWRELIC_LICENSE_KEY=<newrelic-license-key-from-secrets-manager>
NEWRELIC_APP_NAME=quckapp-production

# ===========================================
# TRACING
# ===========================================
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.quckapp.io:4317
OTEL_SERVICE_NAME=quckapp
TRACING_SAMPLE_RATE=0.1

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Firebase (Production Project)
FIREBASE_PROJECT_ID=quckapp-prod
FIREBASE_PRIVATE_KEY=<firebase-prod-private-key-from-secrets-manager>
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@quckapp-prod.iam.gserviceaccount.com

# Twilio (Production Account)
TWILIO_ACCOUNT_SID=<twilio-prod-sid-from-secrets-manager>
TWILIO_AUTH_TOKEN=<twilio-prod-token-from-secrets-manager>
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=<openai-api-key-from-secrets-manager>

# OAuth Providers (Production)
GOOGLE_CLIENT_ID=<google-prod-client-id>
GOOGLE_CLIENT_SECRET=<google-prod-client-secret-from-secrets-manager>
FACEBOOK_APP_ID=<facebook-prod-app-id>
FACEBOOK_APP_SECRET=<facebook-prod-app-secret-from-secrets-manager>
APPLE_CLIENT_ID=<apple-prod-client-id>
APPLE_TEAM_ID=<apple-team-id>
APPLE_KEY_ID=<apple-key-id>
APPLE_PRIVATE_KEY=<apple-private-key-from-secrets-manager>

# ===========================================
# SECRETS MANAGEMENT
# ===========================================
# AWS Secrets Manager
AWS_SECRETS_MANAGER_REGION=us-east-1
AWS_SECRETS_PREFIX=quckapp/prod/

# HashiCorp Vault (Alternative)
VAULT_ADDR=https://vault.quckapp.io
VAULT_TOKEN=<vault-token>
VAULT_SECRETS_PATH=secret/data/quckapp/prod
