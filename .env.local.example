# QuikApp Local Development Environment
# Copy to .env.local and customize

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development
ENVIRONMENT=local

# ===========================================
# DATABASE - LOCAL DOCKER
# ===========================================
# MongoDB
MONGODB_URI=mongodb://localhost:27017/quikapp_local
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=localdev123

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=quikapp_local
MYSQL_USER=quikapp
MYSQL_PASSWORD=localdev123
MYSQL_ROOT_PASSWORD=localroot123

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quikapp_local
POSTGRES_USER=quikapp
POSTGRES_PASSWORD=localdev123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# ===========================================
# MESSAGE BROKERS
# ===========================================
KAFKA_BROKERS=localhost:9092

# ===========================================
# STORAGE - LOCAL MINIO
# ===========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=quikapp-local
S3_REGION=us-east-1
STORAGE_MODE=local

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=local-dev-jwt-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=local-dev-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=local-encryption-key-32-chars!!
SECRET_KEY_BASE=local-secret-key-base-for-elixir-min-64-characters-long-change-in-production

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:19006

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_PRETTY=true

# ===========================================
# MONITORING (DISABLED FOR LOCAL)
# ===========================================
SENTRY_DSN=
DATADOG_ENABLED=false
NEWRELIC_ENABLED=false

# ===========================================
# TRACING
# ===========================================
OTEL_ENABLED=false
JAEGER_ENABLED=false

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================
# Firebase (optional for local)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Twilio (optional for local)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OpenAI (optional for local)
OPENAI_API_KEY=
