# QuikApp QA Environment
# Copy to .env.qa and customize

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development
ENVIRONMENT=qa

# ===========================================
# DATABASE - QA SERVERS
# ===========================================
MONGODB_URI=mongodb+srv://<username>:<password>@qa-cluster.xxxxx.mongodb.net/quikapp_qa?retryWrites=true&w=majority
MYSQL_HOST=quikapp-qa.xxxxx.us-east-1.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_DATABASE=quikapp_qa
MYSQL_USER=quikapp_qa
MYSQL_PASSWORD=<secure-password>
POSTGRES_HOST=quikapp-pg-qa.xxxxx.us-east-1.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=quikapp_qa
POSTGRES_USER=quikapp_qa
POSTGRES_PASSWORD=<secure-password>
REDIS_HOST=quikapp-qa.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=<secure-password>
ELASTICSEARCH_URL=https://quikapp-qa.es.us-east-1.aws.found.io:9243

# ===========================================
# MESSAGE BROKERS
# ===========================================
KAFKA_BROKERS=quikapp-qa-kafka.xxxxx.amazonaws.com:9092

# ===========================================
# STORAGE
# ===========================================
AWS_REGION=us-east-1
S3_BUCKET=quikapp-qa-bucket
STORAGE_MODE=s3

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=<qa-jwt-secret>
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=<qa-refresh-secret>
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=<qa-encryption-key-32-chars>
SECRET_KEY_BASE=<qa-secret-key-base-64-chars>

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://qa.quikapp.io,http://localhost:3000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=https://<key>@sentry.io/<project-qa>
SENTRY_ENVIRONMENT=qa
TRACING_SAMPLE_RATE=1.0
