# QuckApp Environment Variables
# Copy this file to .env and update values for your environment

# ============================================
# Database Credentials
# ============================================

# MySQL
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=quckapp
MYSQL_PASSWORD=quckapp123

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123

# PostgreSQL
POSTGRES_USER=quckapp
POSTGRES_PASSWORD=quckapp123

# ============================================
# Object Storage (MinIO/S3)
# ============================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# ============================================
# Security
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-256-bits
SECRET_KEY_BASE=your-elixir-secret-key-base-at-least-64-characters-long-for-security

# ============================================
# External Services (Optional)
# ============================================

# Databricks (ML Services)
DATABRICKS_HOST=
DATABRICKS_TOKEN=

# OpenAI (Smart Reply)
OPENAI_API_KEY=

# Push Notifications
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# OAuth Integrations
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# WebRTC (TURN Server)
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# ============================================
# Monitoring (Grafana)
# ============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# ============================================
# Distributed Tracing (Jaeger/OpenTelemetry)
# ============================================
# OTLP Endpoints (for OpenTelemetry SDKs)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://otel-collector:4317

# Jaeger Agent (for Jaeger SDKs)
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Zipkin Endpoint (for Zipkin-compatible SDKs)
ZIPKIN_ENDPOINT=http://jaeger:9411/api/v2/spans

# Tracing Configuration
OTEL_SERVICE_NAME=quckapp
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1
OTEL_PROPAGATORS=tracecontext,baggage,b3multi

# Spring Boot Tracing (Micrometer Tracing)
MANAGEMENT_TRACING_ENABLED=true
MANAGEMENT_TRACING_SAMPLING_PROBABILITY=0.1

# ============================================
# Firebase Configuration
# ============================================
# Get credentials from Firebase Console:
#   Project Settings -> Service Accounts -> Generate New Private Key
# See .env.firebase for full template

# Development Firebase Service Account
FIREBASE_PROJECT_ID_DEV=
FIREBASE_PRIVATE_KEY_DEV=
FIREBASE_CLIENT_EMAIL_DEV=

# Production Firebase Service Account
FIREBASE_PROJECT_ID_PROD=
FIREBASE_PRIVATE_KEY_PROD=
FIREBASE_CLIENT_EMAIL_PROD=

# Generic Fallback (used when _DEV/_PROD not set)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
MIX_ENV=dev
SPRING_PROFILES_ACTIVE=docker
