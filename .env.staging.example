# QuckApp Staging Environment
# Copy to .env.staging and customize

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=production
ENVIRONMENT=staging

# ===========================================
# DATABASE - STAGING SERVERS
# ===========================================
# MongoDB Atlas (Staging Cluster)
MONGODB_URI=mongodb+srv://<username>:<password>@staging-cluster.xxxxx.mongodb.net/quckapp_staging?retryWrites=true&w=majority

# MySQL (Staging RDS)
MYSQL_HOST=quckapp-staging.xxxxx.us-east-1.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_DATABASE=quckapp_staging
MYSQL_USER=quckapp_staging
MYSQL_PASSWORD=<secure-password>

# PostgreSQL (Staging RDS)
POSTGRES_HOST=quckapp-pg-staging.xxxxx.us-east-1.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=quckapp_staging
POSTGRES_USER=quckapp_staging
POSTGRES_PASSWORD=<secure-password>

# Redis (Staging ElastiCache)
REDIS_HOST=quckapp-staging.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=<secure-password>

# Elasticsearch (Staging)
ELASTICSEARCH_URL=https://quckapp-staging.es.us-east-1.aws.found.io:9243

# ===========================================
# MESSAGE BROKERS
# ===========================================
KAFKA_BROKERS=quckapp-staging-kafka.xxxxx.amazonaws.com:9092

# ===========================================
# STORAGE - S3 STAGING
# ===========================================
AWS_ACCESS_KEY_ID=<staging-access-key>
AWS_SECRET_ACCESS_KEY=<staging-secret-key>
AWS_REGION=us-east-1
S3_BUCKET=quckapp-staging-bucket
STORAGE_MODE=s3

# CloudFront CDN
CDN_URL=https://staging-cdn.quckapp.io

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=<staging-jwt-secret-min-256-bits>
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=<staging-refresh-secret>
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=<staging-encryption-key-32-chars>
SECRET_KEY_BASE=<staging-secret-key-base-64-chars>

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://staging.quckapp.io

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_PRETTY=false
LOG_FORMAT=json

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=https://<key>@sentry.io/<project-staging>
SENTRY_ENVIRONMENT=staging
DATADOG_ENABLED=true
DATADOG_API_KEY=<datadog-api-key>
DATADOG_ENV=staging
NEWRELIC_ENABLED=true
NEWRELIC_LICENSE_KEY=<newrelic-license-key>
NEWRELIC_APP_NAME=quckapp-staging

# ===========================================
# TRACING
# ===========================================
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-staging.quckapp.io:4317
OTEL_SERVICE_NAME=quckapp-staging
TRACING_SAMPLE_RATE=0.5

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Firebase (Staging Project)
FIREBASE_PROJECT_ID=quckapp-staging
FIREBASE_PRIVATE_KEY=<firebase-staging-private-key>
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@quckapp-staging.iam.gserviceaccount.com

# Twilio (Staging Account)
TWILIO_ACCOUNT_SID=<twilio-staging-sid>
TWILIO_AUTH_TOKEN=<twilio-staging-token>
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=<openai-api-key>

# OAuth Providers
GOOGLE_CLIENT_ID=<google-staging-client-id>
GOOGLE_CLIENT_SECRET=<google-staging-client-secret>
FACEBOOK_APP_ID=<facebook-staging-app-id>
FACEBOOK_APP_SECRET=<facebook-staging-app-secret>
