# QuckApp Development Environment
# Copy to .env.dev and customize

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development
ENVIRONMENT=dev

# ===========================================
# DATABASE - DEV SERVERS
# ===========================================
# MongoDB Atlas (Dev Cluster)
MONGODB_URI=mongodb+srv://<username>:<password>@dev-cluster.xxxxx.mongodb.net/quckapp_dev?retryWrites=true&w=majority

# MySQL (Dev RDS)
MYSQL_HOST=quckapp.xxxxx.us-east-1.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_DATABASE=quckapp_dev
MYSQL_USER=quckapp_dev
MYSQL_PASSWORD=<secure-password>

# PostgreSQL (Dev RDS)
POSTGRES_HOST=quckapp-pg-dev.xxxxx.us-east-1.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=quckapp_dev
POSTGRES_USER=quckapp_dev
POSTGRES_PASSWORD=<secure-password>

# Redis (Dev ElastiCache)
REDIS_HOST=quckapp.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=<secure-password>

# Elasticsearch (Dev)
ELASTICSEARCH_URL=https://quckapp.es.us-east-1.aws.found.io:9243

# ===========================================
# MESSAGE BROKERS
# ===========================================
KAFKA_BROKERS=quckapp-kafka.xxxxx.amazonaws.com:9092

# ===========================================
# STORAGE - S3 DEV
# ===========================================
AWS_ACCESS_KEY_ID=<dev-access-key>
AWS_SECRET_ACCESS_KEY=<dev-secret-key>
AWS_REGION=us-east-1
S3_BUCKET=quckapp-bucket
STORAGE_MODE=s3

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=<dev-jwt-secret-min-256-bits>
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=<dev-refresh-secret>
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=<dev-encryption-key-32-chars>
SECRET_KEY_BASE=<dev-secret-key-base-64-chars>

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://dev.quckapp.io,http://localhost:3000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_PRETTY=false
LOG_FORMAT=json

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=https://<key>@sentry.io/<project-dev>
SENTRY_ENVIRONMENT=dev
DATADOG_ENABLED=true
DATADOG_API_KEY=<datadog-api-key>
DATADOG_ENV=dev

# ===========================================
# TRACING
# ===========================================
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-dev.quckapp.io:4317
OTEL_SERVICE_NAME=quckapp
TRACING_SAMPLE_RATE=1.0

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Firebase (Dev Project)
FIREBASE_PROJECT_ID=quckapp
FIREBASE_PRIVATE_KEY=<firebase-dev-private-key>
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@quckapp.iam.gserviceaccount.com

# Twilio (Dev Account)
TWILIO_ACCOUNT_SID=<twilio-dev-sid>
TWILIO_AUTH_TOKEN=<twilio-dev-token>
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=<openai-api-key>
