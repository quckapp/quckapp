{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ”’ Security",
      "labels": ["security"]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ—ï¸ Infrastructure",
      "labels": ["infrastructure", "ci", "helm", "kubernetes", "docker"]
    },
    {
      "title": "## â¬†ï¸ Dependencies",
      "labels": ["dependencies"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["tests", "testing"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["chore", "refactor", "maintenance"]
    }
  ],
  "ignore_labels": ["skip-changelog"],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "#{{CHANGELOG}}\n\n**Full Changelog**: #{{RELEASE_DIFF}}",
  "pr_template": "- #{{TITLE}} by @#{{AUTHOR}} in ##{{NUMBER}}",
  "empty_template": "No changes.",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)",
      "target": "$1",
      "on_property": "title",
      "method": "match",
      "flags": "i"
    },
    {
      "pattern": "^(fix|bug)",
      "target": "$1",
      "on_property": "title",
      "method": "match",
      "flags": "i"
    }
  ],
  "transformers": [
    {
      "pattern": "\\[.*?\\]\\s?",
      "target": ""
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 1000,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": ["main", "master", "develop"],
  "tag_resolver": {
    "method": "semver"
  },
  "base_branches": ["main", "master"]
}
